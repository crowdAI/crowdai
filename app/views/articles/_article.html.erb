<li data-partial='articles/article'>
  <div class="pic">
    <%= link_to article_path(article) do %>
      <%= concept(Image::Cell,article, current_participant: current_participant) %>
    <% end %>
  </div>
  <div class="details">
    <h5><%= link_to article.article, article_path(article) %></h5>
    <p class="description"><%= article.summary %></p>
    <% if article.participant.is_a? NullParticipant %>
      <p class="user">By
        <%= link_to article.participant.name, '#' %>
      </p>
    <% else %>
      <p class="user">By
        <%= link_to article.participant.name, participant_path(article.participant) %>
      </p>
    <% end %>
  </div>
  <div class="stats">
    <div class="stat-fr">
      <%= article.vote_count %><br/>
      <span><%= "Like".pluralize(article.vote_count) %></span>
    </div>
    <div class="stat-fr">
      <%= article.view_count %><br/>
      <span><%= "View".pluralize(article.view_count) %></span>
    </div>
  </div>
</li>
